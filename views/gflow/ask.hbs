<div class="container text-xl-center">
  <h1 class='questionInput'></h1>
  <div class='row'>
    <div class="col-lg-9 offset-lg-1">
    <form class='add-item' action='/gflow/ask' method='post'>

      <div class="form-group">
        <label for='item-title'>Title:  </label>
        <input type='text' name='title' class="inputBox form-control" placeholder="What's your programming question? Be specific."  value=''></input>
      </div>

      <div class="form-group">
        <label for='item-question'>Question: </label>
        <textarea name='question' placeholder='Ask your question here' class="inputBox postInputBox form-control" ></textarea>
      </div>

      <div class="form-group">
        <label for='item-tags'>Tags: </label>
        <input type='text' name='tags' class="inputBox form-control" placeholder="at least one such as (javaScript database)"  value=''></input>
      </div>

      <div>
        <input type='submit' class="commentClick btn btn-primary " placeholder="Post Your Question"></input>
      </div>

      </form>
  </div>
</div>
