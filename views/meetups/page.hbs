<div class="row">
    <div class="col-md-6">
        <button type="button" class="btn btn-secondary ">
            <a href="meetups/new"><i class="fa fa-plus" aria-hidden="true"></i>
                Add New Meetup</a>
        </button>
    </div>
</div>

<div class="container cards">
    <div class="row">
        <div class="col-sm-6">
            <div id="map"></div>
        </div>
    </div>
</div>

<div class="container cards">
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-block">
                <h3 class="card-title">
                    {{meetup.title}}
                </h3>
                <p class="card-text">{{meetup.username}}</p>
                <p class="card-text">{{meetup.description}}</p>
                <p class="card-text">{{meetup.location}}</p>
                {{#if isOwner}}
                    <a href="meetups/{{meetups.id}}/edit">edit</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>




